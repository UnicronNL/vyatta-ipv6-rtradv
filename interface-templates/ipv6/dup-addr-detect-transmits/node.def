type: u32

help: Set number of NS messages to send while performing DAD

comp_help: Possible completions:
 1 - N\tNumber of NS messages to send while performing DAD
 0\tDisable Duplicate Address Dectection (DAD)

default: 1

syntax:expression: ($VAR(@) >= 0) ; "Value must be >= 0"

update:
        procfile=/proc/sys/net/ipv6/conf/$IFNAME/dad_transmits
        if [ -e $procfile ]; then
            sudo sh -c "echo $VAR(@) > $procfile"
        else
            echo "Will set dup_addr_detect_transmits when $IFNAME comes up"
        fi
